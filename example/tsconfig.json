{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "outDir": "./dist",
        "lib": ["dom", "es5", "es2016"],
        "rootDir": "./src"
    },
    "include": ["src", "globals.d.ts"],
    "exclude": ["node_modules", "dist"]
}